@model ProjWebProgramming.Models.MovieActors

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MovieActors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <br />
            @foreach (var actor in ViewBag.Actor)
            {
                <div class="form-check">
                    <input class="form-check-input" name="ActorIds" type="checkbox" value="@actor.ActorId" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        @actor.FirstName
                    </label>
                </div>
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-3 " asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
