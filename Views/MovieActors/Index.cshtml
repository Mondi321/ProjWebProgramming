@model IEnumerable<ProjWebProgramming.Models.MovieActors>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Actors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Actor)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.FirstName)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { movieId=item.MovieId, actorId = item.ActorId}, new{Class = "btn btn-danger"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

